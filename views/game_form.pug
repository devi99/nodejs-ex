extends layout

block content

  div(id="gameArea")
      div(class="titleWrapper")

  form(method='POST' action='')
    div.form-group
      label(for='gameTypes') Gametype:
      select#gametypes.form-control(type='select', placeholder='Select gametype' name='gametype' required='true' )
                  option(value='1') #{'Fast Game'}
                  option(value='2') #{'Turnbased Game'}
      label(for='numberOfPlayers') Number of players:
      input#numberOfPlayers.form-control(type='text', placeholder='numberOfPlayers' name='numberOfPlayers' required='true' value='1')
          
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg